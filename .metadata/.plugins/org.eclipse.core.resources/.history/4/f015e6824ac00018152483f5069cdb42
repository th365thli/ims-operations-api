package com.ibm.ims.ea.om.common.services.enterprise;

import java.util.Collection;

import com.ibm.im.ac.datastore.DatastoreException;
import com.ibm.ims.ea.om.common.exception.OmDatastoreException;
import com.ibm.ims.ea.om.datastore.ImsOmDatastore;
import com.ibm.ims.ea.om.datastore.OmImsplexTable;
import com.ibm.ims.ea.om.imsplex.Imsplex;

public class ImsplexServices {
    private OmImsplexTable omImsplexTable = null;//ImsOMDatastore.getInstance().getImsImsplexStore();
    
    protected ImsplexServices() throws OmDatastoreException, DatastoreException{
        omImsplexTable = ImsOmDatastore.getInstance().getOmImsplexStore();
    }
    
    public Collection<Imsplex> getImsPlexMembers(int environmentId) throws OmDatastoreException{
        return omImsplexTable.getImsPlexMembers(environmentId,null);
    }
    
    public Collection<Imsplex> getImsPlexMembers(int environmentId, String imsplexName) throws OmDatastoreException{
        return omImsplexTable.getImsPlexMembers(environmentId, imsplexName);
    }
}
