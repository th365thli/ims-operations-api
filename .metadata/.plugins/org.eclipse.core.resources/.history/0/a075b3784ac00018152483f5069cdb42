package com.ibm.ims.ea.om.pgm.update.syntax;

/** Specifies that the LOCK status is to be set on or off. */
public class LOCK implements SET{
	
	private String result = null;
	private static String NAME = "LOCK";
	
	public enum _PGM_LOCK{
		/** Locks the program and prevents it from being scheduled. */
		ON,
		
		/** Unlocks the program and allows it to be scheduled. */
		OFF;
	}

	public LOCK(_PGM_LOCK key) {
    	this.result = key.name();
	}
	
	@Override
	public String toString(){
		StringBuilder strBld = new StringBuilder();
		strBld.append(this.result);
	    return strBld.toString();
	}
	
	@Override
	public String getName() {
		return NAME;
	}
}
