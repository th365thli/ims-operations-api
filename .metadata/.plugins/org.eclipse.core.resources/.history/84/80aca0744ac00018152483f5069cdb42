package com.ibm.ims.ea.om.pgm.update;

import com.ibm.ims.ea.om.pgm.update.syntax.START._PGM_START;
import com.ibm.ims.ea.om.pgm.update.syntax.STOP._PGM_STOP;


public interface PgmUpdateCommand {
	
	/**
	 * Specifies the 1-8 character name of the transaction. Wildcards can be specified
	 * for the tranname. The tranname is a repeatable parameter.
	 * @param name String
	 */
	public void setName(String[] name);
	
	/**
	 * Method will return the type-2 to command as a string. The string command returned will vary
	 * depending on the arguments and options selected. 
	 * @see {@link PgmUpdateCommand}
	 * @return String
	 * @throws Exception
	 */
    public String getCommand();
    
      public void setStart(_PGM_START[] values);

    /**
     * Specifies the attributes to be stopped.
     * {@link _PGM_STOP}
     * @param values
     */
    public void setStop(_PGM_STOP[] values);

	void setRoute(String[] imsName);
    

    
    
	
}