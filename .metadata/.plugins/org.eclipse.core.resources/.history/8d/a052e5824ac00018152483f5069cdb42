package com.ibm.ims.ea.om.common.services.enterprise;

import java.util.Collection;

import com.ibm.im.ac.datastore.DatastoreException;
import com.ibm.ims.ea.om.common.exception.OmDatastoreException;
import com.ibm.ims.ea.om.datastore.ImsOmDatastore;
import com.ibm.ims.ea.om.datastore.ImsProgramTable;
import com.ibm.ims.ea.om.pgm.Program;

public class ProgramServices {

    private ImsProgramTable imsProgramTable = null; 

    protected ProgramServices() throws OmDatastoreException, DatastoreException {
        imsProgramTable = ImsOmDatastore.getInstance().getImsProgramStore();
    }

    public Collection<Program> getPrograms(int environmentId) throws OmDatastoreException {
        return imsProgramTable.getPrograms(environmentId);
    }

    public Collection<Program> getPrograms(int environmentId, String imsplexName) throws OmDatastoreException {
        return imsProgramTable.getPrograms(environmentId, imsplexName);
    }

    public Collection<Program> getPrograms(int environmentId,  String imsplexName, String[] systemId) throws OmDatastoreException {
        return imsProgramTable.getPrograms(environmentId, imsplexName,systemId);
    }
    
    public Collection<Program> getProgramsByName(int environmentId,String[] programNames) throws OmDatastoreException{
        return imsProgramTable.getProgramsByName(environmentId,programNames);
    }
    
    public Collection<Program> getProgramsByName(int environmentId, String imsplexName,String[] programNames) throws OmDatastoreException{
        return imsProgramTable.getProgramsByName(environmentId,imsplexName,programNames);
    }
    
    public Collection<Program> getProgramsByName(String[] systemId, int environmentId, String imsplexName, String[] programNames) throws OmDatastoreException{
        return imsProgramTable.getProgramsByName(environmentId,imsplexName,systemId,programNames);
    }
}
