package com.ibm.ims.ea.om.db.delete;

public interface DbDeleteCommand {
	
	/**
	 * Sets name of the database to delete
	 * @param names
	 */
	public void setName(String[] names);
	
	/**
	 * Sets OPTION keyword values (only one in 
	 * this case ALLRSP
	 * @param option
	 */
	public void setOption(OPTION option);
	
	/**
	 * Sets IMSPlex 
	 * @param imsName
	 */
	public void setRoute(String[] imsName);
	
	/**
	 * OPTION values
	 */
	public enum OPTION {
		ALLRSP
	}
	
	
}
