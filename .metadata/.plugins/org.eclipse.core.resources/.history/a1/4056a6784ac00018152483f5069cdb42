package com.ibm.ims.ea.om.tran.update.syntax;

import com.ibm.ims.ea.base.om.common.messages.IQEO;

/**
 * EDITRTN is used for a Fast Path potential transaction when the transaction is routed to IMS.
 *
 */
public class EDITRTN implements SET {
	
	private String result = null;
	
	public enum _EDITRTN{
		/**Specifies the 1- to 8-character name of your transaction input edit routine that edits messages 
		 * before the program receives the message. This name must begin with an alphabetic character.
		 */
		NAME,
		
		/** To remove an edit routine name from a transaction definition, specify 0 */
		O;
	}
	
	public EDITRTN(_EDITRTN key, String result) throws IllegalArgumentException{
		switch(key){
	    	case NAME:{
	    		int name_length = result.trim().length();
	    		
	    		if(name_length >8 || name_length == 0){
	        		throw new IllegalArgumentException(IQEO.IQEO0009E.msg(new Object[] { "(Name = " + result + ", length = " + name_length }));
	        	}
	    		
	    		this.result = result;
	    		break;
	    	}case O:{
	    		this.result = _EDITRTN.O.name();
	    		break;
	    	} default:{
	    		throw new IllegalArgumentException(IQEO.IQEO0009E.msg(new Object[] { "(Name = " + result}));
	    	}
    	}
	}
	
	public EDITRTN(_EDITRTN key){
		switch(key){
	    	case NAME:{
	    		throw new IllegalArgumentException(IQEO.IQEO0009E.msg(new Object[]{_EDITRTN.NAME + " must have a value."}));
	    	}case O:{
	    		this.result = _EDITRTN.O.name();
	    	}
		}
	}

	@Override
	public String toString(){
		StringBuilder strBld = new StringBuilder();
		strBld.append(this.result);
	    return strBld.toString();
	}
	
}
