package com.ibm.ims.ea.om.icon.query.port;

public interface IconPortQueryCommand {
	
	public static String[] PORT_NAMES =null;
	public static String COMMA = ",";
	// ****************************************************************************
    // * ICON PORT COMMAND ENUM TYPES
    // ****************************************************************************
    
	/**
	 * Enumerates ICON PORT NAMES,
	 * Users can add/return specific names. 
	 *
	 */
	public enum ICON_PORT_NAME{
		/** You can specify NAME(*) to display all ports. NAME(*) is the default. */
		NAME(PORT_NAMES),
		
		/** To display the local port used by the IMS TM Resource Adapter, specify NAME(LOCAL). */
		LOCAL;
		
		private String[] values = null;
		
		private ICON_PORT_NAME(){
			this.values = new String[]{"LOCAL"};
		};
		
    	private ICON_PORT_NAME(String[] values){
    		if(values !=null){
    			this.values = values;
    		}
    	}
    	
    	public void addName(String[] values){
    		this.values = values;
    	}
    	
    	public String getName(){
    		if(values != null){
    			StringBuilder temp = new StringBuilder();
    			int length = values.length;
                int count = 1;
                
        		for(String str : values){
        			temp.append(str);
        			
        			 if(length > 1 && count != length){
        	                count++;
        	                temp.append(COMMA);
        	            }
        		}
        		return temp.toString();
    		}
    		return null;
    	}
	}
	
	/**
	 * Enum for CSTATUS keyword 
	 *
	 */
	public enum ICON_PORT_CSTATUS{
			CONN,
			CONV,
			READ,
			RECV,
			WFCM,
			XMIT;
	}
	
	/**
	 * Enum for SHOW keyword
	 *
	 */
	public enum ICON_PORT_SHOW { 
		ALL,
		CLIENT,
		EDITRTN,
		KEEPAV,
		NUMSOC,
		STATUS,
		SUMMARY,
		TIMEOUT;
	}
	
	/**
	 * Enum for STATUS keyword
	 *
	 */
	public enum ICON_PORT_STATUS {
		ACTIVE,
		NOTACTIVE;
	}
	
	public void setName(ICON_PORT_NAME[] values);
	public void setRoute(String[] values);
	
	public void setClient(String[] values);
	
	public void setCstatus(ICON_PORT_CSTATUS[] values);
	
	public void setDatastore(String[] values);
	
	/**Specifies the optional output fields to be displayed. Output fields that are
	 * always displayed, regardless of whether SHOW is specified, include the port
	 * number, the name of the IMS Connect that processes the command, and the completion code.
	 * @param values
	 */
	public void setShow(ICON_PORT_SHOW[] values);
	
	/**
	 * Selects ports for display that possess at least one of the specified statuses.
	 * When the STATUS keyword is specified, status information is displayed even if
	 * SHOW(STATUS) is not specified.
	 * @param values
	 */
	public void setStatus(ICON_PORT_STATUS[] values);
	
	public void setTran(String[] values);
	
	public void setUserid(String[] values);
	
	public String commandShowAll();
	
	
	
	
}
