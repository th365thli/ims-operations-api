package com.ibm.ims.ea.om.common.service;

import java.util.Collection;

import com.ibm.ims.ea.om.common.exception.OmConnectionException;
import com.ibm.ims.ea.om.common.exception.OmDatastoreException;
import com.ibm.ims.ea.om.common.exception.OmException;
import com.ibm.ims.ea.om.rm.list.Rcn;

public interface ReconService {

/**
 * Method will return a collection of RECON's using the command "/RMLIST DBRC='RECON STATUS'."
 * @return
 * @throws OmException
 * @throws OmConnectionException 
 * @throws OmDatastoreException 
 */
public Collection<Rcn> getImsReconList() throws OmException, OmConnectionException, OmDatastoreException ;

public Collection<Rcn> getImsReconList(String[] systemId) throws OmException, OmConnectionException, OmDatastoreException;
}
