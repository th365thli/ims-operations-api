package com.ibm.ims.ea.om.tran.update.syntax;

import com.ibm.ims.ea.base.om.common.messages.IQEO;

/**
 * Specifies the transaction class, which is an attribute used to select a transaction
 * for scheduling. A transaction can be scheduled if there is a message processing region 
 * available for that class. The value can be a number from 1 to 999.
 */
public class CLAZZ {
	
	private String result = null;
	
	/**
	 * Specifies the transaction class, which is an attribute used to select a transaction
	 * for scheduling. A transaction can be scheduled if there is a message processing region 
	 * available for that class. The value can be a number from 1 to 999.
	 * @param class_number
	 */
	public CLAZZ(int class_number){
		if(class_number >999 || class_number < 1){
    		throw new IllegalArgumentException(IQEO.IQEO0009E.msg(new Object[] { "(Transaction class value  = " + class_number }));
    	}
		this.result = String.valueOf(class_number);
	}

	@Override
	public String toString(){
		StringBuilder strBld = new StringBuilder();
		strBld.append(this.result);
	    return strBld.toString();
	}
}
